<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Rent a Car</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>
<main>
    <%- include('partials/navbar.ejs'); %>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h2 class="text-center mb-3"> Izmena korisnika </h2>
                <%- include('partials/messages.ejs'); %>
                <form action="/korisnik/<%=korisnik.email%>/edit" method="POST">
                    <div class="form-group">
                        <label for="ime">Ime</label>
                        <input type="text" id="ime" name="ime" value="<%=korisnik.ime %>" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="adresa">Adresa</label>
                        <input type="text" id="adresa" name="adresa" value="<%=korisnik.adresa %>" class="form-control"/>
                    </div>
                
                    <div class="form-group">
                        <label for="broj_telefona">Broj telefona</label>
                        <input type="text" id="broj_telefona" name="broj_telefona" value="<%=korisnik.broj_telefona%>" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-info btn-block">Potvrdi</button>
                </form>
                <br>
                    <a style="color: #5bc0de;" href="/profil/<%=korisnik.email%>">Vrati se nazad</a>
            </div>
        </div>
    </div>
</main>
    <%- include ('partials/footer.ejs'); %> 
                   